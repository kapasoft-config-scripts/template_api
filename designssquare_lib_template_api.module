/**Overriding theme_form function to get rid of form html
 * @param $variables
 */
function designssquare_lib_template_api_form($variables)
{
//function theme_form($variables) {
    $element = $variables['element'];
    if (isset($element['#action'])) {
        $element['#attributes']['action'] = drupal_strip_dangerous_protocols($element['#action']);
    }
    element_set_attributes($element, array('method', 'id'));
    if (empty($element['#attributes']['accept-charset'])) {
        $element['#attributes']['accept-charset'] = "UTF-8";
    }

    //grab the messages
//    $variables['messages'] = ds_bootstrap_status_messages(null,true);
    $vars_temp = array('display' => null);
    $variables['messages'] = designssquare_lib_template_api_status_message($vars_temp, true);


    switch ($variables['element']['#form_id']) {

        case 'user_login':
            //override user_login form
            if (is_tapi_enabled('login')) {
                return theme('template_api_login_form', array('login_tapi' => _user_login_tapi(), 'vars_tapi' => $variables));
            }
        case 'user_register_form':
            //override registration form
            if (is_tapi_enabled('registration')) {
                return theme('template_api_registration_form', array('registration_tapi' => _user_registration_tapi(), 'vars_tapi' => $variables));
            }
        case 'user_pass':
            //override password reset form
            if (is_tapi_enabled('password-reset')) {
                return theme('template_api_password_reset_form', array('password_reset_tapi' => _user_pass_tapi(), 'vars_tapi' => $variables));
            }
        case 'search_block_form':
            //to remove wrappers
            return $element['#children'];
            break;
        default:
            return '<form' . drupal_attributes($element['#attributes']) . '><div>' . $element['#children'] . '</div></form>';
    }
}

