        //override search form
        $theme_registry['search_block_form']['function'] = 'designssquare_lib_template_api_search';
    }


    //override theme_form function to remove wrap around form element, override login/registration/password reset forms
    if (!empty($theme_registry['form'])) {
        $theme_registry['form']['function'] = 'designssquare_lib_template_api_form';
    }

    if(is_tapi_enabled('login') || is_tapi_enabled('registration') || is_tapi_enabled('password-reset')){
        //override status-messages theme function ensure messages is not deleted from queue
        $theme_registry['status_messages']['function'] = 'ds_bootstrap_status_messages';
    }

    if(is_tapi_enabled('status-message')){
        $theme_registry['status_messages']['function'] = 'designssquare_lib_template_api_status_message';
    }


    //@ToDo - figure out what function to override for comments and test it for comments
    //comment form
//    if (file_exists($path_to_theme . '/templates/template-api/comment.tpl.php')) { //only enable if the template is present
//        //override comment form
//        $theme_registry['comment_form']['function'] = 'template_api_comment';
//    }


    if (is_tapi_enabled('main-menu') || is_tapi_enabled('user-menu') || is_tapi_enabled('bottom-menu')) { //only enable if the template is present
        //main menu
        $theme_registry['menu_tree']['function'] = 'designssquare_lib_template_api_menu_tree';
        unset($theme_registry['menu_tree']['preprocess functions']);
    }

}

/***retrieves template file path by looking if it exists in module named $module_name. if not it uses
 * themes templates unless some other custom module alters via hook_TEMPLATE_FILE_NAME_alter() hook
 * @param $module_name
 *      the custom module default for templates
 * @param $template_name
 *      the name of template file
 * @return string
 *      path to the template file
 */
function get_ds_template_path($module_name, $template_name)
{
    $path_to_template = '';
    $path_to_theme_templates = path_to_theme() . '/templates/template-api';
    $path_to_widget_templates = drupal_get_path('module', $module_name) . '/templates/template-api';

    if (file_exists($path_to_theme_templates . '/' . $template_name . '.tpl.php')) {
        $path_to_template = $path_to_theme_templates;
    } else {
        $path_to_template = $path_to_widget_templates;
    }


    //substract the template file without relative path
    $path_tokens = explode("/", $template_name);
    $template_file_name = array_pop($path_tokens);
    $hook_template_name = preg_replace('/-/', '_', $template_file_name);
    //hook to let others modify template

    drupal_alter($hook_template_name . "_template", $path_to_template);

    return $path_to_template;
}

//reusing boostrap_status_messages() formating
function ds_bootstrap_status_messages($variables, $clear = False)
{
    global $user;
    $roles = array_intersect_key(user_roles(), $user->roles);
    if (path_is_admin(current_path()) && in_array('administrator',$roles)){
        //ensure the styles are admin
//        $sys_module = drupal_get_path('module', 'system');
//        drupal_add_css($sys_module . '/system.messages.css', array('type' => 'file', 'weight' => CSS_SYSTEM , 'preprocess' => FALSE));

        //for admin themes keep the original layout
        $variables = array('display' => null);
        $output = theme_status_messages($variables);
    }else{
    $display = $variables['display'];
    $output = '';

    $status_heading = array(
        'status' => t('Status message'),
        'error' => t('Error message'),
        'warning' => t('Warning message'),
        'info' => t('Informative message'),
    );

    // Map Drupal message types to their corresponding Bootstrap classes.
    // @see http://twitter.github.com/bootstrap/components.html#alerts
    $status_class = array(
        'status' => 'success',
        'error' => 'danger',
        'warning' => 'warning',
        // Not supported, but in theory a module could send any type of message.
        // @see drupal_set_message()
        // @see theme_status_messages()
        'info' => 'info',
    );

//    $message_status = (is_array($variables['display'])) ? null : $message_status;
    foreach (drupal_get_messages($display, $clear) as $type => $messages) {
        $class = (isset($status_class[$type])) ? ' alert-' . $status_class[$type] : '';
        $output .= "<div class=\"alert alert-block$class\">\n";
        $output .= "  <a class=\"close\" data-dismiss=\"alert\" href=\"#\">&times;</a>\n";

        if (!empty($status_heading[$type])) {
            $output .= '<h4 class="element-invisible">' . $status_heading[$type] . "</h4>\n";
        }

        if (count($messages) > 1) {
            $output .= " <ul>\n";
            foreach ($messages as $message) {
                $output .= '  <li>' . $message . "</li>\n";
            }
            $output .= " </ul>\n";
        } else {
            $output .= $messages[0];
        }

        $output .= "</div>\n";
    }
    }
    return $output;
}


/**
 * extracting logic for lookup to see if template api is enable for particular element
 *      @$element
 *      -name of the template element(i.e. search, registration,etc)
 * @return
 *      true or false
 */
function is_tapi_enabled($element)
{
    $path_to_theme = drupal_get_path('theme', variable_get('theme_default'));

    switch ($element) {
        case 'breadcrumb':
            $template_file = '/templates/template-api/breadcrumbs.tpl.php';
            break;
        case 'search':
            $template_file = '/templates/template-api/search.tpl.php';
            break;
        case 'registration':
            $template_file = '/templates/template-api/registration.tpl.php';
            break;
        case 'login':
            $template_file = '/templates/template-api/login.tpl.php';
            break;
        case 'password-reset':
            $template_file = '/templates/template-api/password-reset.tpl.php';
            break;
        case 'comment':
            $template_file = '/templates/template-api/comment.tpl.php';
            break;
        case 'main-menu':
            $template_file = '/templates/template-api/main-menu.tpl.php';
            break;
        case 'user-menu':
            $template_file = '/templates/template-api/user-menu.tpl.php';
            break;
        case 'bottom-menu':
            $template_file = '/templates/template-api/bottom-menu.tpl.php';
            break;
        case 'footer':
            $template_file = '/templates/template-api/footer.tpl.php';
            break;
        case 'header':
            $template_file = '/templates/template-api/header.tpl.php';
            break;
        case 'contact':
            $template_file = '/templates/template-api/contact.tpl.php';
            break;
        case 'status-message':
            $template_file = '/templates/template-api/status-message.tpl.php';
            break;
        default:
            $template_file = 'no-template-present';
    }

    //currently template api is enabled depending if the template is present
    return file_exists($path_to_theme . $template_file);
}